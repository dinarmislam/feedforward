<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <h2 class="text-center">Welcome back</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder: 'Email Address', required: true, class: "form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: 'Password', required: true, class: "form-control", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.button "Log in", class: "btn btn-primary btn-lg btn-block", data: {disable_with: "Logging in..."} %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
